<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:background="#f4f3f3"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">




        <LinearLayout
            android:background="#ffff"
            android:id="@+id/layoutChung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:context="com.status.aka.statusfacebook.EditStatus">


                <LinearLayout
                    android:background="@drawable/boder_edittext"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/layoutEditText"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:textSize="30sp"
                        android:gravity="center"
                        android:background="@drawable/boder_edittext"
                        android:id="@+id/statusText"
                        android:text=""
                        android:hint="Nhập status..."
                        android:textColorHint="#cfcfcf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>



                <TextView
                    android:id="@+id/line"
                    android:layout_marginTop="20dp"
                    android:background="#d7d7d7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <LinearLayout
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/layoutFooter"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/txtDesign"
                            android:textSize="18sp"
                            android:textStyle="italic"
                            android:textColor="#494949"
                            android:text="Thiết kê: "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_alignBaseline="@+id/txtDesign"
                            android:layout_toRightOf="@+id/txtDesign"
                            android:gravity="center"
                            android:id="@+id/txtName"
                            android:textColor="#ff0000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:text="Akashj Pro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_alignLeft="@+id/txtName"
                            android:layout_below="@+id/txtName"
                            android:id="@+id/imgProfile"
                            android:src="@drawable/status_fb"
                            android:layout_width="50dp"
                            android:layout_height="50dp" />

                    </RelativeLayout>





                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/layoutEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        android:padding="4dp"
                        android:visibility="gone"
                        android:layout_alignParentRight="true"
                        android:id="@+id/show_footer"
                        android:textColor="#2200ff"
                        android:text="Hiện"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:background="#ffffff"
                        android:padding="4dp"
                        android:id="@+id/hide_footer"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>



        <Button
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:id="@+id/btnReview"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/bottomlayout"
            android:textColor="#ffffff"
            android:background="@drawable/button_background_facebook"
            android:text="Xem trước"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >



                <ImageButton
                    android:id="@+id/action_font"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/type"
                    />

                <ImageButton
                    android:id="@+id/action_color"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/color" />


                <ImageButton
                    android:id="@+id/action_bold"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/bold"
                    />

                <ImageButton
                    android:id="@+id/action_italic"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/italic"
                    />







                <ImageButton
                    android:id="@+id/action_underline"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/underline"
                    />

                <ImageButton
                    android:id="@+id/action_normal"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/normal"
                    />




                <ImageButton
                    android:id="@+id/action_align_left"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/justify_left"
                    />

                <ImageButton
                    android:id="@+id/action_align_center"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/justify_center"
                    />

                <ImageButton
                    android:id="@+id/action_align_right"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:contentDescription="@null"
                    android:src="@drawable/justify_right"
                    />

            </LinearLayout>
        </HorizontalScrollView>

        <com.google.android.gms.ads.AdView
            android:layout_alignParentBottom="true"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>


    </LinearLayout>



</ScrollView>


